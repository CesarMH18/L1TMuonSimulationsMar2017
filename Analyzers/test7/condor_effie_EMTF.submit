Universe    =  vanilla
+JobFlavour = "testmatch"

Executable  =  efficiency_EMTF_condorjobs.sh
Arguments   =  $(cutx) $(cuty)

Error       =  CondorFiles/efficiency_EMTF.$(ClusterId).$(ProcId).err
Output      =  CondorFiles/efficiency_EMTF.$(ClusterId).$(ProcId).out
Log         =  CondorFiles/efficiency_EMTF.$(ClusterId).log

Environment = "HOME=$ENV(HOME)"

should_transfer_files    =  YES
transfer_input_files     =  Code.tar.gz, data/
when_to_transfer_output  =  ON_EXIT
transfer_output_files   =  histos_tbc_files_1-100_CSCmatch_EMTF_cutx_$(cutx)_cuty_$(cuty).root
Queue cutx,cuty from job_list.txt


